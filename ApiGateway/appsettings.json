{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "car-page-route": {
        "ClusterId": "car-page-cluster",
        "Match": {
          "Path": "car-page-service/{**catch-all}"
        },
        "Transforms": [
          {"PathPattern": "{**catch-all}"}
        ]
      },
      "card-route": {
        "ClusterId": "card-cluster",
        "Match": {
          "Path": "card-service/{**catch-all}"
        },
        "Transforms": [
          {"PathPattern": "{**catch-all}"}
        ]
      },
      "requisition-route": {
        "ClusterId": "requisition-cluster",
        "Match": {
          "Path": "requisition-service/{**catch-all}"
        },
        "Transforms": [
          {"PathPattern": "{**catch-all}"}
        ]
      }
    },
    "Clusters": {
      "car-page-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://car-page-service:8080"
          },
          "destination2": {
            "Address": "https://car-page-service:8081"
          }
        }
      },
      "card-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://card-service:8080"
          },
          "destination2": {
            "Address": "https://card-service:8081"
          }
        }
      },
      "requisition-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://requisition-service:8080"
          },
          "destination2": {
            "Address": "https://requisition-service:8081"
          }
        }
      }
    }
  }
}
